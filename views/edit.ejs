        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h3 class="mt-2">Edit Inmate</h3>
                </div>
                <div class="container container-sm mb-3">
                    <div class="card ">
                        <div class="card-body">
                            <form class="form" action="/edit/<%= inmate.id %>" method="post">
                                <h4 class="text-center">Inmate Details</h4>
                                <hr class="line">
                                <div class="row">

                                    <div class="col-md-2 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="inmateNo">Inmate No.</label>
                                            <input type="text" id="inmateNo" name="inmateNo"
                                                class="form-control form-control-sm" value="<%= inmate.inmateNo%>"
                                                required />
                                        </div>
                                    </div>

                                    <div class="col-md-2 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="cellBlock">Cellblock No.</label>
                                            <input type="text" id="cellBlock" name="cellBlock"
                                                class="form-control form-control-sm" value="<%= inmate.cellBlock%>"
                                                required />
                                        </div>
                                    </div>
                                </div>

                                <!-- <div class="row">
                                    <div class="col-md-2 mb-1">
                                        <div class="form-outline-sm">
                                            <input type="file" id="image-upload" class="form-control form-control-sm"
                                                onchange="handleImageUpload(event)" accept="image/*" />
                                        </div>
                                    </div>
                                </div> -->

                                <div class="row">
                                    <div class="col-md-3 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="lastName">Last Name</label>
                                            <input type="text" id="lastname" name="lastname"
                                                class="form-control form-control-sm" value="<%= inmate.lastname%>"
                                                required />
                                        </div>
                                    </div>

                                    <div class="col-md-3 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="firstName">First Name</label>
                                            <input type="text" id="firstname" name="firstname"
                                                class="form-control form-control-sm" value="<%= inmate.firstname%>"
                                                required />
                                        </div>
                                    </div>

                                    <div class="col-md-3 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="midName">Middle Name</label>
                                            <input type="text" id="middlename" name="middlename"
                                                class="form-control form-control-sm" value="<%= inmate.middlename%>"
                                                required />
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-1">
                                        <div class="form-group">
                                            <label class="form-label" for="suffix">Suffix</label>
                                            <select class="form-select form-select-sm" id="suffix" name="suffix"
                                                required>
                                                <option selected disabled value="<%= inmate.suffix%>">
                                                    <%= inmate.suffix%>
                                                </option>
                                                <option value="N/A">N/A</option>
                                                <option value="Jr">Jr.</option>
                                                <option value="Sr">Sr</option>
                                                <option value="II">II</option>
                                                <option value="III">III</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="perAdd">Permanent Address</label>
                                            <input type="text" id="perAdd" name="perAdd"
                                                class="form-control form-control-sm" value="<%= inmate.perAdd%>"
                                                required />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <div class="form-group">
                                            <label class="form-label" for="lastName">Gender</label>
                                            <select class="form-select form-select-sm" id="gender" name="gender"
                                                required>
                                                <option selected disabled value="<%= inmate.gender%>">
                                                    <%= inmate.gender%>
                                                </option>
                                                <option value="male">Male</option>
                                                <option value="female">Female</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-3 mb-3">
                                        <div class="form-outline">
                                            <label class="form-label" for="bday">Birthday</label>
                                            <input type="date" id="bday" name="bday"
                                                class="form-control form-control-sm" value="<%= inmate.bday%>"
                                                required />
                                        </div>
                                    </div>

                                    <div class="col-md-3 mb-3">
                                        <div class="form-group">
                                            <label class="form-label" for="civilstatus">Civil Status</label>
                                            <select class="form-select form-select-sm" id="civilstatus"
                                                name="civilstatus" required>
                                                <option selected disabled value="<%= inmate.civilstatus%>">
                                                    <%= inmate.civilstatus%>
                                                </option>
                                                <option value="single">Single</option>
                                                <option value="married">Married</option>
                                                <option value="divorce">Divorce</option>
                                                <option value="widowed">Widowed</option>
                                                <option value="seperated">Seperated</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-3 mb-3">
                                        <div class="form-group">
                                            <label class="form-label" for="eyeColor">Eye Color</label>
                                            <select class="form-select form-select-sm" id="eyeColor" name="eyeColor"
                                                required>
                                                <option selected disabled value="<%= inmate.eyeColor%>">
                                                    <%= inmate.eyeColor%>
                                                </option>
                                                <option value="black">Black</option>
                                                <option value="brown">Brown</option>
                                                <option value="green">Green</option>
                                                <option value="blue">Blue</option>
                                                <option value="yellow">Yellow</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <hr class="line">
                                <h4 class="text-center">Case Details</h4>
                                <hr class="line">
                                <div class="row">
                                    <div class="col-md-6 mb-2 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="crimeCom">Crime Commited</label>
                                            <input type="text" id="crimeCom" name="crimeCom"
                                                class="form-control form-control-sm" value="<%= inmate.crimeCom%>"
                                                required />
                                        </div>
                                    </div>

                                    <div class="col-md-6 mb-2 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="sentence">Sentence</label>
                                            <input type="text" id="sentence" name="sentence"
                                                class="form-control form-control-sm" value="<%= inmate.sentence%>"
                                                required />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-outline">
                                            <label class="form-label" for="dateStart">Date Serve Started</label>
                                            <input type="date" id="dateStart" name="dateStart"
                                                class="form-control form-control-sm" value="<%= inmate.dateStart%>"
                                                required />
                                        </div>
                                    </div>

                                    <div class="col-md-6 mb-2">
                                        <div class="form-outline">
                                            <label class="form-label" for="dateEnd">Date Serve Ends</label>
                                            <input type="date" id="dateEnd" name="dateEnd"
                                                class="form-control form-control-sm" value="<%= inmate.dateEnd%>"
                                                required />
                                        </div>
                                    </div>
                                </div>
                                <hr class="line">
                                <h4 class="text-center">Emergency Details</h4>
                                <hr class="line">
                                <div class="row">
                                    <div class="col-md-3 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="elastname">Last Name</label>
                                            <input type="text" id="elastname" name="elastname"
                                                class="form-control form-control-sm" value="<%= inmate.elastname%>"
                                                required />
                                        </div>
                                    </div>

                                    <div class="col-md-3 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="efirstname">First Name</label>
                                            <input type="text" id="efirstname" name="efirstname"
                                                class="form-control form-control-sm" value="<%= inmate.efirstname%>"
                                                required />
                                        </div>
                                    </div>

                                    <div class="col-md-3 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="emiddlename">Middle Name</label>
                                            <input type="text" id="emiddlename" name="emiddlename"
                                                class="form-control form-control-sm" value="<%= inmate.emiddlename%>"
                                                required />
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-1">
                                        <div class="form-group">
                                            <label class="form-label" for="esuffix">Suffix</label>
                                            <select class="form-select form-select-sm" id="esuffix" name="esuffix"
                                                required>
                                                <option selected disabled value="<%= inmate.esuffix%>">
                                                    <%= inmate.esuffix%>
                                                </option>
                                                <option value="N/A">N/A</option>
                                                <option value="Jr">Jr.</option>
                                                <option value="Sr">Sr</option>
                                                <option value="II">II</option>
                                                <option value="III">III</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="eperAdd">Permanent Address</label>
                                            <input type="text" id="eperAdd" name="eperAdd"
                                                class="form-control form-control-sm" value="<%= inmate.eperAdd%>"
                                                required />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-1">
                                        <div class="form-group">
                                            <label class="form-label" for="relationship">Relationship</label>
                                            <select class="form-select form-select-sm" id="relationship"
                                                name="relationship" required>
                                                <option selected disabled value="<%= inmate.relationship%>">
                                                    <%= inmate.relationship%>
                                                </option>
                                                <option value="Father">Father</option>
                                                <option value="Mother">Mother</option>
                                                <option value="Son">Son</option>
                                                <option value="Daugther">Daugther</option>
                                                <option value="GrandMother">GrandMother</option>
                                                <option value="GrandFather">GrandFather</option>
                                                <option value="GrandrSon">GrandrSon</option>
                                                <option value="GrandDaugther">GrandDaugther</option>
                                                <option value="Auntie">Auntie</option>
                                                <option value="Uncle">Uncle</option>
                                                <option value="Cousin">Cousin</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-1">
                                        <div class="form-outline">
                                            <label class="form-label" for="contact">Contact</label>
                                            <input type="text" id="contact" name="contact"
                                                class="form-control form-control-sm" value="<%= inmate.contact%>"
                                                required />
                                        </div>
                                    </div>
                                </div>

                                <div class="d-grid gap-2 col-3 mx-auto">
                                    <button type="submit" class="btn btn-primary mt-3">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
        </div>
        </main>
    </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"></script>
    <script src="javascripts/script.js"></script>
    <script src="javascripts/datatables.js"></script>
</body>

