          <div class="card mb-4">
            <div class="card-header">
              <i class="fas fa-table me-1"></i>
              Inmate Record
            </div>
            <div class="card-body">
              <table id="datatablesSimple">
                <thead>
                  <tr>
                    <th>inmateNo</th>
                    <th>cellBlock</th>
                    <th>firstname</th>
                    <th>lastname</th>
                    <th>gender</th>
                    <th>civilstatus</th>
                    <th>view</th>
                    <th>edit</th>
                    <th>delete</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>inmateNo</th>
                    <th>cellBlock</th>
                    <th>firstname</th>
                    <th>lastname</th>
                    <th>gender</th>
                    <th>civilstatus</th>
                    <th>view</th>
                    <th>edit</th>
                    <th>delete</th>
                  </tr>
                </tfoot>
                <tbody>
                  <% allinmates.forEach((inmate)=> { %>
                    <tr>
                      <td>
                        <%= inmate.inmateNo %>
                      </td>
                      <td>
                        <%= inmate.cellBlock %>
                      </td>
                      <td>
                        <%= inmate.firstname %>
                      </td>
                      <td>
                        <%= inmate.lastname %>
                      </td>
                      <td>
                        <%= inmate.gender %>
                      </td>
                      <td>
                        <%= inmate.civilstatus %>
                      </td>
                      <td>
                        <a href="view/<%= inmate.id %>"><button class="btn btn-basic"><i
                              class="fa-solid fa-eye"></i></button></a>
                      </td>
                      <td>
                        <a href="edit/<%= inmate.id %>"><button class="btn btn-basic"><i
                              class="fa-solid fa-pen-to-square"></i></button></a>
                      </td>
                      <td>
                        <form action="/delete/<%= inmate.id %>" method="post">
                          <button type="submit" class="btn btn-basic"><i
                              class="fa-solid fa-square-minus"></i></i></button>
                        </form>
                      </td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
            </div>
          </div>
