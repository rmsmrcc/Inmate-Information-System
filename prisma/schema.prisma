generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Admin {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  email_admin    String    @unique
  password_admin   String?
  createdAt         DateTime  @default(now())
  shift      Int
}
model Visitor {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  email_visitor    String    @unique
  password_visitor  String?
  createdAt         DateTime  @default(now())
  shift    Int
}
model InmateRecord {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  inmateNo     String?
  cellBlock    String?
  lastname     String?
  firstname    String?
  middlename   String?
  suffix       String?
  perAdd       String?
  gender       String?
  bday         String?
  civilstatus  String?
  eyeColor     String?
  crimeCom     String?
  sentence     String?
  dateStart    String?
  dateEnd      String?
  elastname    String?
  efirstname   String?
  esuffix      String?
  eperAdd      String?
  relationship String?
  contact      String?
}

